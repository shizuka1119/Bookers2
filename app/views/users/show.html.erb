<div class="container">
<div class="row">
  <div class="col-xs-3">

    <% if flash[:success]%>
   <%= flash[:success]%>
   <% end %>
    <%= render 'info',{user:@user} %>
    <%= render 'books/side',{book:@book, user:current_user} %>
  </div>

<p id="noticd" style="color:green;">
<% if flash[:notice]%>
<%= flash[:notice]%>
<% end %>


  <div class="col-xs-9">
      <table class="table">
        <h2>Books</h2>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

            <% @books.each do |book| %>
                <tbody>
                  <tr>
                    <td>
                      <%= attachment_image_tag book.user, :profile_image, size: '40x40', format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                    </td>
                    <td>
                <%=link_to book.title, book, class: "book_#{book.id}" %>
                    </td>
                    <td>
                      <%= book.body %>
                    </td>
              

                   <% end %>
                  </tr>
                </tbody>

      </table>
  </div>
</div>