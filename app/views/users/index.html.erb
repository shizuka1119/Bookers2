<div class="container">

<div class="row">
  <div class="col-xs-3">
    <%= render 'info',{user:current_user} %>

    <%= render 'books/side',{book:@book, user:current_user} %>
  </div>


  <div class="col-xs-9">
      <table class="table">
        <h2>Users</h2>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>

          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                 <div>
                  <%= attachment_image_tag user, :profile_image, size: '40x40', format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></div>

              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show",user_path(user.id), class: "user_#{user.id}" %>
              </td>
            </tr>
          </tbody>
          <% end %>
      </table>

  </div>
</div>
</div>