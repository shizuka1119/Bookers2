
<h2>New book</h2>
  <%= form_for(book, url: books_path)do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control book_title"%>
  <%= f.label :opinion %>
  <%= f.text_area :body, class: "form-control book_body" %>
  <p> </p>
  <%= f.submit class: "btn btn-block btn-primary" %>
<% end %>